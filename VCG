    <script>
        // --- Automated Tracking Logic ---

        // 1. Define the unique referral source code
        const referralCode = "VGC-REFER";
        
        // 2. Define the target booking URL (A1's actual booking site)
        // **FINAL URL Confirmed:** Mixo Contact Page for booking.
        const bookingUrl = "https://www.mixo.io/site/a-1-auto-detail-ivpcg/contact";

        // 3. Store the code in local storage for redundancy (in case the redirect fails or the client navigates away)
        try {
            localStorage.setItem('a1_referral_source', referralCode);
        } catch (e) {
            console.error("Local Storage not supported or failed to save referral code.");
        }

        // 4. Construct the final URL with the tracking parameter
        const finalRedirectUrl = `${bookingUrl}?ref=${referralCode}`;

        // 5. Execute the immediate redirect
        window.onload = function() {
            setTimeout(() => {
                window.location.href = finalRedirectUrl;
            }, 1000); // 1 second delay to allow the welcome message to be read
        }
    </script>
